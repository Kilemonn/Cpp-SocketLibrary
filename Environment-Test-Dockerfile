# docker build -f .\Environment-Test-Dockerfile .

FROM alpine:3.23.0 AS alpine

WORKDIR /alpine

# bluez-dev bluez
RUN apk update && apk upgrade && apk add g++ cmake make git glib-dev

COPY ./src ./src
COPY ./tests ./tests
COPY ./CMakeLists.txt ./CMakeLists.txt

RUN ["cmake", "-B", "build", "."]

WORKDIR /alpine/build
RUN ["make", "all"]

WORKDIR /alpine/build/tests
RUN ["./CppSocketLibraryTests"]

FROM ubuntu:24.04 AS ubuntu

WORKDIR /ubuntu

RUN apt update && apt upgrade -y && apt install g++ make cmake git libglib2.0-dev -y

COPY ./src ./src
COPY ./tests ./tests
COPY ./CMakeLists.txt ./CMakeLists.txt

RUN ["cmake", "-B", "build", "."]

WORKDIR /ubuntu/build
RUN ["make", "all"]

WORKDIR /ubuntu/build/tests
RUN ["./CppSocketLibraryTests"]

# Do a fake copy to make sure it runs both stages
COPY --from=alpine /alpine/build/tests/CppSocketLibraryTests /ubuntu/CppSocketLibraryTests
